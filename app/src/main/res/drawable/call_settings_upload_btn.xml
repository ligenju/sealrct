<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="25dp"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/colorBG"/>
            <stroke android:width="1dp" android:color="@color/colorGray1"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="25dp"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/colorGray2"/>
            <stroke android:width="2dp" android:color="@color/colorGray1"/>
        </shape>
    </item>

</selector>